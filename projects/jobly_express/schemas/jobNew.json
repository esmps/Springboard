{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/jobNew.json",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "salary": {
            "type": "integer",
            "minimum": 0
        },
        "equity": {
            "type": "integer",
            "minimum": 0,
            "maximum": 1
        },
        "companyHandle": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "title",
        "salary",
        "equity",
        "companyHandle"
    ]
}